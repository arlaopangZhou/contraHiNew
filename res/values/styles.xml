<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="@android:style/Theme.Translucent.NoTitleBar.Fullscreen"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="TitleButton">
        <item name="android:background">@drawable/title_button_selector</item>
        <item name="android:textColor">@drawable/title_textcolor_selector</item>
        <item name="android:textSize">32dp</item>
    </style>

    <style name="menubutton">
        <item name="android:background">@drawable/title_button_selector</item>
        <item name="android:textColor">@drawable/menu_textcolor_selector</item>
        <item name="android:textSize">24dp</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">center</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="TextOnMainLayout2">
        <item name="android:textSize">28dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>

    <style name="marqueeText">
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:scrollHorizontally">true</item>
    </style>


    <style name="MyDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="CustomDialog" parent="@android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="exit_window_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center_vertical|right</item>
    </style>


    <style name="TextOnMainLayout_new">
        <item name="android:textSize">28dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:background">@drawable/hot_text_bg</item>
        <item name="android:focusable">true</item>
        <item name="android:padding">5dp</item>
    </style>

</resources>