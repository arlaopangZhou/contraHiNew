<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/launcher52_bg" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/top_system_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:textColor="#999999"
            android:textSize="28sp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/top_net_type"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="18dp" android:contentDescription=""/>
        
        <Space
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1.0" />

        <TextView
            android:id="@+id/top_weather_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:singleLine="true"
            android:textColor="#999999"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/top_weather_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:minWidth="150dp"
            android:singleLine="true"
            android:textColor="#999999"
            android:textSize="25sp" />
    </LinearLayout>

    <RadioGroup
        android:id="@id/title_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dip"
        android:orientation="horizontal"
        android:paddingLeft="60dip"
        android:paddingRight="60dip" >

        <RadioButton
            android:id="@+id/title_menu0"
            style="@style/TitleButton"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:button="@null"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:text="" />

        <RadioButton
            android:id="@+id/title_menu1"
            style="@style/TitleButton"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:button="@null"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:text="" />

        <RadioButton
            android:id="@+id/title_menu2"
            style="@style/TitleButton"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:button="@null"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:text="" />

        <RadioButton
            android:id="@+id/title_menu3"
            style="@style/TitleButton"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:button="@null"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:text="" />

        <RadioButton
            android:id="@+id/title_menu4"
            style="@style/TitleButton"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:button="@null"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:text="" />

        <RadioButton
            android:id="@+id/title_menu5"
            style="@style/TitleButton"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:button="@null"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:text="" />
        
        <RadioButton
            android:id="@+id/title_menu6"
            style="@style/TitleButton"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:button="@null"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:text="" />
        
        <RadioButton
            android:id="@+id/title_menu7"
            style="@style/TitleButton"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:button="@null"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:text="" />
    </RadioGroup>

    <android.support.v4.view.ViewPager
        android:id="@id/main_layout_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp" />

    <Button
        android:id="@id/main_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="100dp"
        android:background="@drawable/main_searcch_sel" />

</RelativeLayout>